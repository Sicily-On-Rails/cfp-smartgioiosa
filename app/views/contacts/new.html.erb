<!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Contatti
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a>
                    </li>
                    <li class="active">Contatti</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Contact Form -->

              <div class="col-md-8">
                  <h3>Invia un messaggio</h3>
                  <%= form_for(@contact) do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>
                      <div class="control-group form-group">
                          <div class="controls">
                              <%= f.label :name, "Nome *" %>
                              <%= f.text_field :name, class:"form-control" %>
                              <p class="help-block"></p>
                          </div>
                      </div>
                      <div class="control-group form-group">
                          <div class="controls">
                              <%= f.label :surname, "Cognome *" %>
                              <%= f.text_field :surname, class:"form-control" %>
                              <p class="help-block"></p>
                          </div>
                      </div>

                      <div class="control-group form-group">
                          <div class="controls">
                              <%= f.label :object, "Oggetto *" %>
                              <%= f.text_field :object, class:"form-control" %>
                              <p class="help-block"></p>
                          </div>
                      </div>
                      <div class="control-group form-group">
                          <div class="controls">
                            <%= f.label :email, "Email *" %>
                            <%= f.text_field :email, class:"form-control" %>
                          </div>
                      </div>
                      <div class="control-group form-group">
                          <div class="controls">
                            <%= f.label :message, "Messaggio *" %>
                            <%= f.text_area :message, class:"form-control", rows:"10", cols:"100" %>
                          </div>
                      </div>
                      <!-- For success/fail messages -->
                      <%= f.submit "INVIA", class:"btn btn-primary"%>
                  <%end%>
              </div>


            <!-- Contact Details Column -->
            <div class="col-md-4">
