<%if @proposals.present?%>

<div class="row">

<div class="col-lg-12">
<h2 class="page-header">PROPOSTE INSERITE DA <%= current_user.email%></h2>
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Tematica</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @proposals.each do |proposal| %>
      <tr>
        <td><%= proposal.title%></td>
        <td><%= proposal.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Inserisci Nuova Proposta', new_proposal_path %>
</div>
</div>
</div>
<%else%>
<h2 class="page-header">Nessuna proposa ancora inserita da <%= current_user.email%></h2>
<%= link_to 'Inserisci Nuova Proposta', new_proposal_path %>

<%end%>
